<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/myImageAddFragment"
    android:padding="10dp"
    android:background="@color/dialogBoxBackground"
    android:clickable="true"
    tools:context="com.scu.tausch.Activities.ImageAddFragment">

    <TextView
        android:id="@+id/top_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/textColorPrimary"
        android:text="Add Photos"
        android:textSize="18dp"
        android:gravity="center_vertical"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:textColor="@color/colorPrimary"
        />

    <ImageView
        android:id="@+id/black_border_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/top_heading"
        android:background="@color/grayPatchListColor"/>

<LinearLayout
    android:id="@+id/layout_top_three_images"
    android:layout_below="@+id/black_border_one"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:gravity="center"
    android:background="@color/textColorPrimary"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/image_one"
        android:layout_width="@dimen/image_upload_w_h"
        android:layout_height="@dimen/image_upload_w_h"
        android:scaleType="fitXY"
        android:src="@mipmap/item_placeholder"/>

    <ImageView
    android:id="@+id/image_two"
    android:layout_width="@dimen/image_upload_w_h"
    android:layout_height="@dimen/image_upload_w_h"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/item_placeholder"/>

    <ImageView
    android:id="@+id/image_three"
    android:layout_width="@dimen/image_upload_w_h"
    android:layout_height="@dimen/image_upload_w_h"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/item_placeholder"/>

</LinearLayout>

    <ImageView
        android:id="@+id/black_border_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/layout_top_three_images"
        android:background="@color/grayPatchListColor"/>


    <LinearLayout
        android:id="@+id/layout_bottom_two_images"
        android:layout_below="@+id/black_border_two"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:background="@color/textColorPrimary"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image_four"
            android:layout_width="@dimen/image_upload_w_h"
            android:layout_height="@dimen/image_upload_w_h"
            android:scaleType="fitXY"
            android:src="@mipmap/item_placeholder"/>

        <ImageView
            android:id="@+id/image_five"
            android:layout_width="@dimen/image_upload_w_h"
            android:layout_height="@dimen/image_upload_w_h"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/item_placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:textColor="@color/textColorPrimary"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/textColorPrimary"
            android:paddingRight="8dp"
            android:textAllCaps="false"
            android:paddingLeft="8dp"
            android:layout_gravity="center" />
    </LinearLayout>

</RelativeLayout>